@model EmailAgnostic.Models.Signup
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        * {
            box-sizing: border-box
        }
        .container{
            max-width:649px;
        }
        .align{
            text-align:center;
        }
        /* Full-width input fields */
        .box {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            .box:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        hr {
            border: 1px solid #f1f1f1;
            margin-bottom: 25px;
        }

        /* Set a style for all buttons */
        button {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
        }

            button:hover {
                opacity: 1;
            }

        /* Extra styles for the cancel button */
        .cancelbtn {
            padding: 14px 20px;
            background-color: #f44336;
        }

        /* Float cancel and signup buttons and add an equal width */
        .cancelbtn, .signupbtn {
            float: left;
            width: 50%;
        }

        /* Add padding to container elements */
        .container {
            padding: 16px;
        }

        /* Clear floats */
        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }
        
    </style>
</head>

<body>

   
        <div class="container">
            <h1 class="align">Sign Up</h1>
            @*<p>Please fill in this form to create an account.</p>*@
            <hr>
            @{
                Html.BeginForm("SignupValidation", "Signup", FormMethod.Post);

                <label for="Name"><b>Name</b></label>
                //<input type="text" placeholder="Enter Email" name="email" required>
                @Html.TextBoxFor(m => m.Name, new { @class = "box", placeholder = "Enter Name" })

                <label for="Email"><b>Email</b></label>
                //<input type="password" placeholder="Enter Password" name="psw" required>
                @Html.TextBoxFor(m => m.Email, new { @class = "box", placeholder = "Enter email" })


                <label for="Address"><b>Address</b></label>
                //<input type="password" placeholder="Repeat Password" name="psw-repeat" required>
                @Html.TextBoxFor(m=>m.Address, new  {@class = "box",placeholder = "Enter the address" })
                <label for="PhoneNumber"><b>Phone Number</b></label>
                @Html.TextBoxFor(m=>m.PhoneNumber,new  {@class = "box",placeholder = "Enter the Phone Number" })

                <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

                <div class="clearfix">
                    <button type="button" class="cancelbtn">Cancel</button>
                    <button type="submit" class="signupbtn">Sign Up</button>
                </div>
            }
        </div>
    
    

</body>
</html>

